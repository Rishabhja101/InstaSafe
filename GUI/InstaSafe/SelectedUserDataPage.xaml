<Window x:Class="InstaSafe.SelectedUserDataPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaSafe"
        mc:Ignorable="d"
        Title="SelectedUserDataPage" Height="356.2" Width="513.2">
    <Grid>
        <DataGrid x:Name="DataGrid" HorizontalAlignment="Left" Height="295" Margin="10,10,0,0" VerticalAlignment="Top" Width="488">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, Mode=OneWay}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Risk" Binding="{Binding OverallUserSeverity, Mode=OneWay}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Caption Risk" Binding="{Binding CaptionBad, Mode=OneWay}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Image Risk" Binding="{Binding ImageSeverity, Mode=OneWay}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
